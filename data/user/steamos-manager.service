[Unit]
Description=SteamOS Manager Daemon
Before=gamescope-session.target
Wants=gamescope-session.target
Wants=hhd.service
Wants=hhdl.service
After=hhd.service
After=hhdl.service
StartLimitIntervalSec=120
StartLimitBurst=5

[Service]
Type=notify-reload
BusName=com.steampowered.SteamOSManager1
Environment=RUST_LOG=info
ExecStart=/usr/bin/steamos-manager
Restart=on-failure
RestartSec=1
RestartMaxDelaySec=10
RestartSteps=3

[Install]
WantedBy=graphical-session.target
